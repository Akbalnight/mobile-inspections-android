<resources>

    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="inspection_button_default" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@drawable/button_default_text_color</item>
        <item name="android:backgroundTint">@drawable/button_default_background_color</item>
        <item name="rippleColor">@color/elementDark</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="inspection_button_text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@drawable/button_text_text_color</item>
        <item name="rippleColor">@color/elementLight</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="inspection_button_text_compact" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@drawable/button_text_text_color</item>
        <item name="rippleColor">@color/elementLight</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

    </style>

    <style name="inspection_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/textMain</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="inspection_drop_down_menu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/black50</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="hintTextColor">@color/elementsBlue</item>
        <item name="android:textColorHint">@color/elementsBlue</item>
        <item name="expandedHintEnabled">false</item>
        <item name="cornerRadius">4dp</item>
        <item name="endIconDrawable">@drawable/ic_drop_down_selector</item>
        <item name="endIconTint">@color/elementsBlue</item>

    </style>

    <style name="inspection_edit_text_hint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:focusable">false</item>
        <item name="hintTextColor">@color/elementsBlue</item>
        <item name="android:textColorHint">@color/elementsBlue</item>
        <item name="expandedHintEnabled">false</item>
        <item name="cornerRadius">4dp</item>
    </style>

</resources>