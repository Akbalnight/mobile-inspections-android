<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar_with_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/bottomBarAddCheckpoint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etDescription"
                    style="@style/inspection_edit_text_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="@string/fragment_checkpoint_detail_commentary"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/etCheckpointDescription"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:ems="150"
                        android:focusedByDefault="false"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:maxLength="150"
                        android:maxLines="5"
                        android:textColor="@color/textMain" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/ivRFID"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/tvRFID"
                    app:layout_constraintBottom_toBottomOf="@id/tvRFID"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/ic_rfid" />

                <TextView
                    android:id="@+id/tvRFID"
                    app:layout_constraintTop_toBottomOf="@+id/etDescription"
                    app:layout_constraintStart_toEndOf="@+id/ivRFID"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    tools:text="@string/rfid_s"
                    android:textColor="@color/elementsBlue"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="17sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomBarAddCheckpoint"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@color/elementDark"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/llBottomScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgBottomButtonScan"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="TODO"
                    android:paddingBottom="4dp"
                    android:src="@drawable/ic_bottom_sheet_scan" />

                <TextView
                    android:id="@+id/tvBottomButtonScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/fragment_scan"
                    android:textAllCaps="true"
                    android:textColor="@color/textWhite"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBottomPhotoVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:focusable="false"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgBottomButtonPhotoVideo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="TODO"
                    android:paddingBottom="4dp"
                    android:src="@drawable/ic_bottom_sheet_photo_video" />

                <TextView
                    android:id="@+id/tvBottomButtonPhotoVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/fragment_photo_video"
                    android:textAllCaps="true"
                    android:textColor="@color/textWhite"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fabCheckpointSave"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/bottomBarAddCheckpoint"
            app:layout_constraintEnd_toEndOf="@+id/bottomBarAddCheckpoint"
            app:srcCompat="@drawable/ic_fab_save" />

        <ru.madbrains.inspection.ui.view.ProgressView
            android:id="@+id/progressView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>